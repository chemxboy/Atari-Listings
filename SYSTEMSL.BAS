5 REM SOLVING SYSTEMS
10 DIM AGAIN$(5)
15 POSITION 10,3:? "}SOLVING SYSTEMS"
20 ? :? "THIS PROGRAM WILL SOLVE A SYSTEM IN
30 ? :? "     ";CHR$(17);" A1x+B1y=C1"
40 ? "     ";CHR$(26);" A2x+B2y=C2"
50 TRAP 50:? :? "ENTER A1,B1, and C1";:INPUT A1,B1,C1
60 TRAP 60:? :? "ENTER A2,B2, and C2";:INPUT A2,B2,C2
90 TRAP 15:LET D=A1*B2-A2*B1
100 IF D=0 THEN 150
110 X=(B2*C1-B1*C2)/D
120 Y=(A1*C2-A2*C1)/D
130 ? :? "SOLUTION SET IS: [";X;",";Y;"]"
140 GOTO 160
150 ? :? "NO UNIQUE SOLUTION"
160 ? :? " ANY MORE SYSTEMS TO SOLVE";
170 TRAP 160:INPUT AGAIN$
180 IF AGAIN$(1,1)="Y" THEN CLR :GOTO 5
190 END
